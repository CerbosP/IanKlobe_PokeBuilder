<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:strokeColor="@color/black"
    app:strokeWidth="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    android:layout_margin="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_poke_sprite"
            android:layout_width="110dp"
            android:layout_height="100dp"
            tools:src="@tools:sample/avatars"
            tools:background="@color/bug"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_poke_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Alolan Exegcutor"
            android:textColor="@color/black"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:paddingVertical="5dp"
            android:paddingHorizontal="3dp"
            app:layout_constraintTop_toBottomOf="@id/iv_poke_sprite"
            app:layout_constraintStart_toStartOf="@id/iv_poke_sprite"
            app:layout_constraintEnd_toEndOf="@id/iv_poke_sprite"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>